with [get-editor "Q7Project - Project Settings"] {
    with [get-section Description | get-text-viewer] {
        type-text "Test description"
        key-type Enter
        type-text "new line"
        key-type "M1+s"
    }
    close
}
with [get-view "Test Explorer"] {
    click
    get-tree | select "Q7Project/Project Settings" | double-click
}

<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>rcptt-module-nebula</artifactId>
		<groupId>org.eclipse.rcptt</groupId>
		<version>2.6.0-SNAPSHOT</version>
		<relativePath>../../pom.xml</relativePath>
	</parent>
	<artifactId>org.eclipse.rcptt.module.nebula.updates</artifactId>
	<packaging>eclipse-plugin</packaging>


	<dependencies>
		<dependency>
			<groupId>org.eclipse.rcptt</groupId>
			<artifactId>org.eclipse.rcptt.module.nebula-runtime-site</artifactId>
			<version>2.6.0-SNAPSHOT</version>
			<type>eclipse-repository</type>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<configuration>
					<filesets>
						<fileset>
							<directory>runtime</directory>
							<includes>
								<include>**/*.*</include>
							</includes>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/runtime</outputDirectory>
							<resources>
								<resource>
									<directory>
										../../runtime-site/target/repository/</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-enforcer-plugin</artifactId>
				<executions>
					<execution>
						<id>enforce-artifacts</id>
						<goals>
							<goal>enforce</goal>
						</goals>
						<phase>compile</phase>
						<configuration>
							<rules>
								<requireFilesExist>
									<files>
										<file>${basedir}/runtime/artifacts.jar</file>
										<file>${basedir}/runtime/content.jar</file>
									</files>
								</requireFilesExist>
							</rules>
							<fail>true</fail>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
